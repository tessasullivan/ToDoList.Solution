
@{
  Layout = "_Layout";
}
@using ToDoList.Models;

<ul>

@if (Model.Count == 0)
{
  <p>You have no items in your to do list!</p>
}
@if (Model.Count !=0)
{
  @foreach (Item item in Model)
  {
  <li><a href='/items/@item.GetId()'>@item.GetDescription() @item.GetDueDate().ToString("MM/dd/yyyy")</a></li>
  }
}

</ul>

<form action="/items/delete" method="post">
  <a class='button2' href="/items/new">Add new item</a>
  <button type="submit" class="button2">Clear All Items</button>
</form>