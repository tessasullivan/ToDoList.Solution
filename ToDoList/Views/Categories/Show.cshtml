
@{
  Layout = "_Layout";
}
<h3>Here are all of the items in @Model["category"].GetName()</h3>

@if (Model.Count == 0)
{
    <p>You have no items in this category.</p>
}
@if(Model.Count != 0)
{
    <ol>
    @foreach (var item in @Model["items"])
    {
        <li><a href='/categories/@Model["category"].GetId()/items/@item.GetId()'>@item.GetDescription() @item.GetDueDate().ToString("MM/dd/yyyy")</a></li>
    }
    </ol>
}

<table>
    <tr>
        <td><a href='/categories/@Model["category"].GetId()/items/new'>Add a new item</a></td>
        <td><a href='/categories/@Model["category"].GetId()/itemssort'>Sort by duedate</a></td>
    </tr>
    <tr>
        <td>
            <a href='/categories'>View categories</a>
        </td>
        <td>
            <a href='/categories/new'>Add a new category</a>
        </td>
    </tr>
</table>