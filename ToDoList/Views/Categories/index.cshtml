
@{
  Layout = "_Layout";
}
@using ToDoList.Models;




@if (Model.Count == 0)
{
  <p>No categories have been added yet</p>
}
@if(Model.Count != 0)
{
  <table>
    <tr>
      <th>Category</th>
    </tr>
  @foreach (Category category in Model)
  {
    <tr>
      <td><a href='/categories/@category.GetId()'>@category.GetName()</a></td>
    </tr>
  }
  </table>
}
<br/>
<form action="/categories/delete" method="post">
<a class="button" href="/categories/new">Add new</a>

<button type="submit" id="deleteall" name="button">Delete all</button>
</form>
